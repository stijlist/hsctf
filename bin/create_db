#!/usr/bin/env ruby
require 'sequel'
DB = Sequel.sqlite("#{File.dirname(__FILE__)}/../db/game_database.db")
DB.create_table :players do
  primary_key :id
  String :name
  String :email
  String :available_challenges
  Integer :score
end

DB.create_table :challenge_ports do
  primary_key :id
  Integer :player_id
  String :challenge_name
  String :port
end
